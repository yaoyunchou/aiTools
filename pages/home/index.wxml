<nav nav-type="search" />
<view class="home-container">
  <view class="home-content">
    <!-- tip  长按图片可以下载和分享哟！ -->
    <t-tabs defaultValue="recommend" bind:change="onChange">
      <t-tab-panel label="推荐" value="recommend">
        <t-pull-down-refresh
          value="{{enable}}"
          bind:refresh="onRefresh"
          loadingTexts="{{['下拉刷新', '松手刷新', '正在刷新', '刷新完成']}}"
        >
          <view class="home-card-list">
            <t-swiper
              list="{{swiperList}}"
              navigation="{{ { type: 'dots-bar' } }}"
              height="488rpx"
              style="width: 340rpx"
            />
            <card
              wx:for="{{cardInfo}}"
              wx:key="index"
              desc="{{item.prompt}}"
              url="{{item.images[0]}}"
              tags="{{[]}}"
              index="{{index}}"
              bind:cardtap="onCardTap"
              bind:sharetap="onShareTap"
            />
          </view>
        </t-pull-down-refresh>
      </t-tab-panel>
      <t-tab-panel label="我的作品" value="follow">
        <view class="home-card-list">
          <card
            wx:for="{{focusCardInfo}}"
            wx:key="index"
            desc="{{item.prompt}}"
            url="{{item.images[0]}}"
            tags="{{[]}}"
            index="{{index}}"
            bind:cardtap="onCardTap"
            bind:sharetap="onShareTap"
          />
        </view>
      </t-tab-panel>
    </t-tabs>
  </view>
</view>

