.container {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.upload-section {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.preview-section,
.result-section {
  margin-bottom: 40rpx;
  width: 100%;
}

.preview-title,
.result-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.preview-image,
.result-image {
  width: 100%;
  height: 360rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.button-section {
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
}

.remove-bg-btn {
  width: 80%;
  height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-bg-btn[disabled] {
  background-color: #94deb4;
  color: rgba(255, 255, 255, 0.8);
}

.save-btn {
  margin-top: 20rpx;
  width: 60%;
  height: 80rpx;
  background-color: #0052d9;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 